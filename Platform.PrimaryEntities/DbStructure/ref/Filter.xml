    <RightSqlExpression>select
	fe.idEntityField
from
	tp.FormElements fe
where
	fe.idOwner = {idOwner}
        AND fe.idEntityField IS NOT NULL --fix ошибки работы NOT IN при наличии значений NULL в списке</RightSqlExpression>
