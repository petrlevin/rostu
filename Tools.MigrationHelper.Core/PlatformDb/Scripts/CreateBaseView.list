CREATE VIEW [gen].[Entity] AS SELECT [a].[id], [a].[Name], [a].[idEntityType], [b].[Caption] AS [idEntityType_Caption] FROM [ref].[Entity] AS [a] INNER JOIN [enm].[EntityType] AS [b] ON [a].[idEntityType]=[b].[id];
CREATE VIEW [gen].[EntityField] AS SELECT [a].[id], [a].[Name], [a].[idEntity], [b].[id] as [idEntity_Caption], [a].[idEntityFieldType], [c].[Caption] as [idEntityFieldType_Caption], [a].[Size], [a].[Precision], [a].[Expression], [a].[idEntityLink], [d].[id] as [idEntityLink_Caption], [a].[idForeignKeyType], [e].[Caption] AS [idForeignKeyType_Caption], [a].[AllowNull], [a].[isCaption], [a].[DefaultValue] FROM [ref].[EntityField] [a] INNER JOIN [ref].[Entity] [b] ON [a].[idEntity]=[b].[id] INNER JOIN [enm].[EntityFieldType] [c] ON [a].[idEntityFieldType]=[c].[id] LEFT OUTER JOIN [ref].[Entity] [d] ON [a].[idEntityLink]=[d].[id] LEFT OUTER JOIN [enm].[ForeignKeyType] [e] ON [e].[id]=[a].[idForeignKeyType];
CREATE VIEW [gen].[EntityType] AS SELECT [id] ,[Name] ,[Caption] ,[Description] FROM [enm].[EntityType];
CREATE VIEW [gen].[EntityFieldType] AS SELECT [id] ,[Name] ,[Caption] ,[Description] FROM [enm].[EntityFieldType];
CREATE VIEW [gen].[Programmability] AS SELECT [a].[id], [a].[Schema], [a].[Name], [a].[CreateCommand], [a].[idProgrammabilityType], [b].[Caption] AS [idProgrammabilityType_Caption] from [ref].[Programmability] AS [a] INNER JOIN [enm].[ProgrammabilityType] AS [b] ON [a].[idProgrammabilityType]=[b].[id];
CREATE VIEW [gen].[ProgrammabilityType] AS SELECT [id],[Name],[Caption],[Description] FROM [enm].[ProgrammabilityType];